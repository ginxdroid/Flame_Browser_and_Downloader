<resources>
    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="textAppearanceButton">@style/TextAppearance.Flame.Button</item>
        <item name="textAppearanceHeadline7">@style/TextAppearance.Flame.Headline7</item>
        <item name="actionBarSize">@dimen/customActionBarSize</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialog</item>
    </style>


    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
<!--         Set the splash screen background, animatedIcon and animation duration-->
        <item name="windowSplashScreenBackground">@color/colorLightSurface</item>

<!--        Use windowSplashScreenAnimatedIcon to add either a drawable or an animated drawable. One of them is required-->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>
        <item name="android:statusBarColor">@color/colorLightSurface</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme" parent="BaseTheme">
        <item name="disabledAlphaSpecial">0.26</item>

        <!--        0.87 alpha-->
        <item name="primaryText">#de000000</item>

        <!--        0.60 alpha-->
        <item name="secondaryText">#99000000</item>

        <!--        colorOnSurface at 6% opacity-->
        <item name="etBackgroundColor">#0F000000</item>

        <!--        colorOnSurface at 12% opacity-->
        <item name="dividerAndProgressColor">#1F000000</item>

        <!--        12% opacity-->
        <item name="incognitoRippleColor">#1FFFFFFF</item>

        <!--        blend of colorSurface and onSurface color and 24dp elevation i.e. 16% opacity of onSurface with colorSurface-->
        <item name="dialogButtonTextColor">#FFFFFF</item>

        <item name="tabBackgroundColor">#FFFFFF</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#000000</item>
        <item name="colorPrimary">#E60023</item>
        <item name="colorSecondary">#E60023</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorOnSecondary">#FFFFFF</item>

        <item name="android:statusBarColor">#FFFFFF</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>


    <style name="DarkAppTheme" parent="BaseTheme">
        <item name="disabledAlphaSpecial">0.30</item>

        <!--        0.87 alpha-->
        <item name="primaryText">#deFFFFFF</item>

        <!--        0.60 alpha-->
        <item name="secondaryText">#99FFFFFF</item>

        <!--        colorOnSurface at 6% opacity-->
        <item name="etBackgroundColor">#0FFFFFFF</item>

        <!--        colorOnSurface at 12% opacity-->
        <item name="dividerAndProgressColor">#1FFFFFFF</item>

        <!--        12% opacity-->
        <item name="incognitoRippleColor">#1FFFFFFF</item>

        <!--        blend of colorSurface and onSurface color and 24dp elevation i.e. 16% opacity of onSurface with colorSurface-->
        <item name="dialogButtonTextColor">#383838</item>

        <!--        blend of colorSurface and onSurface color and 3dp elevation i.e. 5% opacity of onSurface with colorSurface-->
        <item name="tabBackgroundColor">#232323</item>
        <item name="colorSurface">#121212</item>
        <item name="colorOnSurface">#FFFFFF</item>
        <item name="colorPrimary">#7cabf7</item>
        <item name="colorSecondary">#7cabf7</item>
        <item name="colorOnPrimary">#121212</item>
        <item name="colorOnSecondary">#121212</item>

        <item name="android:statusBarColor">#121212</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="LightBlueTheme" parent="AppTheme">
        <item name="colorSecondary">#1a73e8</item>
        <item name="colorPrimary">#1a73e8</item>
    </style>


    <style name="LightOrangeTheme" parent="AppTheme">
        <item name="colorSecondary">#ff9118</item>
        <item name="colorPrimary">#ff9118</item>
    </style>

    <style name="DarkYellowTheme" parent="DarkAppTheme">
        <item name="colorSecondary">#ffeb3b</item>
        <item name="colorPrimary">#ffeb3b</item>
    </style>

    <style name="DarkLightBlueTheme" parent="DarkAppTheme">
        <item name="colorSecondary">#03a9f4</item>
        <item name="colorPrimary">#03a9f4</item>
    </style>

    <style name="DarkPinkTheme" parent="DarkAppTheme">
        <item name="colorSecondary">#FF4081</item>
        <item name="colorPrimary">#FF4081</item>
    </style>

    <style name="DarkOrangeTheme" parent="DarkAppTheme">
        <item name="colorSecondary">#ff9118</item>
        <item name="colorPrimary">#ff9118</item>
    </style>

    <style name="LightPinkTheme" parent="AppTheme">
        <item name="colorSecondary">#FF4081</item>
        <item name="colorPrimary">#FF4081</item>
    </style>

    <style name="LightLightBlueTheme" parent="AppTheme">
        <item name="colorSecondary">#03a9f4</item>
        <item name="colorPrimary">#03a9f4</item>
    </style>

    <style name="LightTropicalRainForestTheme" parent="AppTheme">
        <item name="colorSecondary">#01875f</item>
        <item name="colorPrimary">#01875f</item>
    </style>

    <style name="LightPurpleTheme" parent="AppTheme">
        <item name="colorSecondary">#FF6200EE</item>
        <item name="colorPrimary">#FF6200EE</item>
    </style>

    <style name="DarkPurpleTheme" parent="DarkAppTheme">
        <item name="colorSecondary">#FFBB86FC</item>
        <item name="colorPrimary">#FFBB86FC</item>
    </style>
</resources>